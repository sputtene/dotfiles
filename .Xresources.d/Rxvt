!! rxvt-unicode
! rxvt-unicode does not seem to recognize XTerm class resources (although
! the documentation says it does).
! That is why we put all this in the Rxvt class.

! Application icon
Rxvt*iconFile:      /usr/share/pixmaps/urxvt_32x32.xpm

! set default fore- and background colors
Rxvt*foreground:    White
Rxvt*background:    Black

! scroll in jumps instead of line per line -> speed up emerging, for example
Rxvt*jumpScroll:    true
Rxvt*multiScroll:   true

! only scroll down when we press a key - does not seem to work :/
!Rxvt*scrollTtyOutput:  false
!Rxvt*scrollKey:        true

! gimme a login shell
Rxvt*loginShell:    true

! enable a nice large scrollback-buffer by default
Rxvt*saveLines:     9999

! transparancy settings
Rxvt*inheritPixmap: true
Rxvt*tintColor:     white
Rxvt*shading:       40
Rxvt*fading:        40

! fonts
Rxvt*letterSpace:   -2

Rxvt*font:          xft:Envy Code R-9:antialias=false:style=Regular,-misc-fixed-medium-r-semicondensed-*-13-*-*-*-*-*-iso8859-7,-misc-fixed-*-*-semicondensed-*-13-*-*-*-*-*-koi8-r
Rxvt*boldFont:      xft:Envy Code R-9:antialias=false:style=Bold
Rxvt*italicFont:    xft:Envy Code R-9:antialias=false:style=Italic

! use all the screen real estate we get
Rxvt*internalBorder:    0
Rxvt*externalBorder:    0

! I want a blinky cursor
Rxvt*cursorBlink:   true

! set scrollbar options
Rxvt*scrollBar:         true
Rxvt*scrollBar_right:   true
Rxvt*scrollBar_floating:     true
Rxvt*scrollstyle:       plain

! a slightly larger than default terminal
Rxvt*geometry:  132x30

! map urxvt colors to those used in the linux console
Rxvt*color0:    #000000
Rxvt*color1:    #AA0000
Rxvt*color2:    #00AA00
Rxvt*color3:    #AA5500
Rxvt*color4:    #0000AA
Rxvt*color5:    #AA00AA
Rxvt*color6:    #00AAAA
Rxvt*color7:    #AAAAAA
Rxvt*color8:    #555555
Rxvt*color9:    #FF5555
Rxvt*color10:   #55FF55
Rxvt*color11:   #FFFF55
Rxvt*color12:   #5555FF
Rxvt*color13:   #FF55FF
Rxvt*color14:   #55FFFF
Rxvt*color15:   #FFFFFF

! Enable rot13 perl plugin
Rxvt.keysym.C-M-r:  perl:selection:rot13

Rxvt.urlLauncher:   glinks

! blaze-x
Rxvt*keysym.S-Right:    O2C
Rxvt*keysym.S-Left:     O2D

